import Adafruit_DHT
import psycopg2
import time

# Sensor settings
DHT_SENSOR = Adafruit_DHT.DHT11
DHT_PIN = 4  # Change if using a different GPIO pin
TEMP_THRESHOLD = 30  # Temperature threshold in Celsius

# PostgreSQL connection details (update as per your setup)
DB_CONFIG = {
    "dbname": "dht11_db",
    "user": "your_user",
    "password": "your_password",
    "host": "localhost",  
    "port": "5432",
}

# Function to insert data into PostgreSQL
def insert_data(temperature, humidity):
    try:
        conn = psycopg2.connect(**DB_CONFIG)
        cursor = conn.cursor()
        cursor.execute("INSERT INTO dht11_data (temperature, humidity, timestamp) VALUES (%s, %s, NOW())", 
                       (temperature, humidity))
        conn.commit()
        cursor.close()
        conn.close()
        print(f"Data saved: Temp={temperature}°C, Humidity={humidity}%")
    except Exception as e:
        print(f"Error: {e}")

# Main loop to fetch and store sensor data
while True:
    humidity, temperature = Adafruit_DHT.read(DHT_SENSOR, DHT_PIN)
    if humidity is not None and temperature is not None:
        if temperature > TEMP_THRESHOLD:
            insert_data(temperature, humidity)
        else:
            print(f"Temperature {temperature}°C ")
    else:
        print("Failed to retrieve data from sensor")
    time.sleep(10)  # Fetch data every 10 seconds
